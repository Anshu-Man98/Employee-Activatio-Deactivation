                formData.append('SponsorGID', $('#sponsorGid').val().toString());
                formData.append('Department', $('#sponsorDepartment').val().toString());
                formData.append('ReportingManagerEmailID', $('#reportingManEmail').val().toString());
                formData.append('CmEmailID', $('#fromEmail').val().toString());
                formData.append('SivantosPointEmailID', $('#toEmail').val().toString());
                formData.append('SivantosPointName', $('#sivantosActivationPointName').val().toString());
                formData.append('CcEmailID', $('#ccEmail').val().toString());
                $.ajax({
                    cache: false,
                    contentType: false,
                    processData: false,
                    dataType: "json",
                    data: formData,
                    type: "POST",
                    url: '@Url.Action("AddSponsorDetailsToDatabase", "Admin")',
                    success: function (response)
                    {
                        $("#loader-wrapper").hide();
                        if (response == true) {
                            bootbox.alert({
                                message: "New team details added",
                                callback: function () {
                                    window.location.reload();
                                }
                            })
                        }
                        else {
                            alert("Try again! Data could not be updated.")
                        }
                    }
                });
            });
        });

        $(document).on("click", "#MailContentButton", function (e) {
            $("#loader-wrapper").show();
             $.ajax({
                    type: "POST",
                    url: '@Url.Action("AddConfigurationToDatabase", "Email")',
                    dataType: "json",
                 data: { "WelcomeEmailSender": $('#welcomeEmailSender').val(), "ToEmailAUDomain": $('#toEmailAUDomain').val(), "ContactNameAUDomain": $('#contactNameAUDomain').val(), "CCEmailAUDomain": $('#ccEmailAUDomain').val(),"SendGrid": $('#TokenValue').val(), "EmailTimer": $('#emailTimer').val()},
                 success: function (response) {
                     if (response == true) {
                         $("#loader-wrapper").hide();
                         bootbox.alert({
                             message: "Mail Configuration updated",
                             callback: function () {
                                 window.location.reload();
                             }
                         })
                     } else {
                         alert("Try again! Data could not be updated.")
                     }
                 }
