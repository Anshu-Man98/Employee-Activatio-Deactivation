        });

        function openForm1()
        {
            document.getElementById("myForm1").style.display = "block";

        }
        function closeForm1()
        {
            document.getElementById("myForm1").style.display = "none";
        }
        function openForm()
        {
            document.getElementById("myForm").style.display = "block";
        }

        function closeForm()
        {
            document.getElementById("myForm").style.display = "none";
        }

        var Regx = "^[A-Za-z ]+$";
        function ValidateInputText(tagId) {
            if ($(tagId).val().trim().search(Regx)) {
                return true;
            } else {
                return false;
            }
        }

        var expr = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
        function ValidateEmail(tagId) {
            if ($(tagId).val().trim().search(expr)) {
                return false;
            } else {
                return true;
            }
        }

        $(function () {
            $("#submit1").click(function (e) {
                if (document.getElementById('teamName').value == "") {
                    alert("Please provide Team Name");
                    document.getElementById('teamName').focus();
                    return false;
                }
                if (document.getElementById('sponsorFirstName').value == "" || ValidateInputText('#sponsorFirstName') == true) {
                    alert("Please provide First Name");
                    document.getElementById('sponsorFirstName').focus();
                    return false;
                }
                if (document.getElementById('sponsorLastName').value == "" || ValidateInputText('#sponsorLastName') == true) {
                    alert("Please provide Last Name");
                    document.getElementById('sponsorLastName').focus();
                    return false;
                }
                if (document.getElementById('sponsorEmail').value == "" || ValidateEmail('#sponsorEmail') == false) {
                    alert("Please provide Sponsor Email");
                    document.getElementById('sponsorEmail').focus();
                    return false;
                }
                if (document.getElementById('sponsorDepartment').value == "") {
                    alert("Please provide sponsor department");
                    document.getElementById('sponsorDepartment').focus();
                    return false;
                }
                if (document.getElementById('reportingManEmail').value == "" || ValidateEmail('#reportingManEmail') == false) {
                    alert("Please provide reporting manager email");
                    document.getElementById('reportingManEmail').focus();
                    return false;
                }
                if (document.getElementById('fromEmail').value == "" || ValidateEmail('#fromEmail') == false) {
                    alert("Please provide CM email");
                    document.getElementById('fromEmail').focus();
                    return false;
                }
                if (document.getElementById('toEmail').value == "" || ValidateEmail('#toEmail') == false) {
                    alert("Please provide Sivantos Activation Request Point of Contact Id");
                    document.getElementById('toEmail').focus();
                    return false;
                }
                if (document.getElementById('sivantosActivationPointName').value == "" || ValidateInputText('#sivantosActivationPointName') == true) {
                    alert("Please provide Sivantos Activation Point of Contact Name");
                    document.getElementById('sivantosActivationPointName').focus();
                    return false;
                }
                if (document.getElementById('ccEmail').value == "" ) {
                    alert("Please provide email cc");
                    document.getElementById('ccEmail').focus();
                    return false;
                }
            });
        });

        $(function () {
            $("#submit2").click(function (e) {

                if (document.getElementById('editFirstName').value == "" || ValidateInputText('#editFirstName') == true) {
                    alert("Please provide First Name");
                    document.getElementById('editFirstName').focus();
                    return false;
                }
                if (document.getElementById('editLastName').value == "" || ValidateInputText('#editLastName') == true) {
                    alert("Please provide Last Name");
                    document.getElementById('editLastName').focus();
                    return false;
                }
                if (document.getElementById('editSponsorEmail').value == "" || ValidateEmail('#editSponsorEmail') == false) {
                    alert("Please provide Sponsor Email");
                    document.getElementById('editSponsorEmail').focus();
                    return false;
                }
                if (document.getElementById('editDepartment').value == "") {
                    alert("Please provide sponsor department");
                    return false;
                }
                if (document.getElementById('editRmEmail').value == "" || ValidateEmail('#editRmEmail') == false) {
                    alert("Please provide Reporting manager email");
                    document.getElementById('editRmEmail').focus();
                    return false;
                }
                if (document.getElementById('editFromEmail').value == "" || ValidateEmail('#editFromEmail') == false) {
                    alert("Please provide CM email");
                    document.getElementById('editFromEmail').focus();
                    return false;
                }
                if (document.getElementById('editToEmail').value == "" || ValidateEmail('#editToEmail') == false) {
                    alert("Please provide Sivantos Activation Request Point of Contact Id");
                    document.getElementById('editToEmail').focus();
                    return false;
                }
                if (document.getElementById('editSivantosActivationPointName').value == "" || ValidateInputText('#editSivantosActivationPointName') == true) {
                    alert("Please provide Sivantos Activation Point of Contact Name");
                    document.getElementById('editSivantosActivationPointName').focus();
                    return false;
                }
                if (document.getElementById('editCcEmail').value == "") {
                    alert("Please provide email cc");
                    document.getElementById('editCcEmail').focus();
                    return false;
                }
            });
        });


        $(function () {
            $("#MailContentButton").click(function (e) {
                if (document.getElementById('contactNameAUDomain').value == "" || ValidateInputText('#contactNameAUDomain') == true) {
                    alert("Please provide AU domain contact name");
                    document.getElementById('contactNameAUDomain').focus();
                    return false;
                }
                if (document.getElementById('TokenValue').value == ""){
                    alert("Please provide Token Value");
                    document.getElementById('TokenValue').focus();
                    return false;
                }
                if (document.getElementById('toEmailAUDomain').value == "" || ValidateEmail('#toEmailAUDomain') == false) {
                    alert("Please provide AU domain to Email");
                    document.getElementById('toEmailAUDomain').focus();
                    return false;
                }
                if (document.getElementById('ccEmailAUDomain').value == "" ) {
                    alert("Please provide AU domain CC email");
                    document.getElementById('ccEmailAUDomain').focus();
                    return false;
                }
                if (document.getElementById('welcomeEmailSender').value == "" || ValidateEmail('#welcomeEmailSender') == false) {
                    alert("Please provide email id to send welcome email");
                    document.getElementById('welcomeEmailSender').focus();
                    return false;
                }
            });
        });
    </script>

</head>
<body>
    <div class="header">
        <h2> Sponsor Details </h2>
    </div>
    <button type="button" id="backButton" class="btn btn-outline-secondary" onclick="window.open('@Url.Action("EmployeeDeactivationForm", "Employees")', '_self')">Back</button>
    <div class="tablee">

        <table id="tbldata" class="table table-bordered ">
            <thead>
                <tr>
                    <th scope="col" onclick="w3.sortHTML('#tbldata', '.item', 'td:nth-child(1)')" style="cursor:pointer"> Team</th>
                    <th scope="col" onclick="w3.sortHTML('#tbldata', '.item', 'td:nth-child(2)')" style="cursor:pointer"> Sponsor Name</th>
                    <th scope="col" onclick="w3.sortHTML('#tbldata', '.item', 'td:nth-child(3)')" style="cursor:pointer"> GID</th>
                    <th scope="col" onclick="w3.sortHTML('#tbldata', '.item', 'td:nth-child(4)')" style="cursor:pointer"> Sponsor Email</th>
                    <th scope="col" onclick="w3.sortHTML('#tbldata', '.item', 'td:nth-child(5)')" style="cursor:pointer"> Sponsor Department</th>
                    <th scope="col" onclick="w3.sortHTML('#tbldata', '.item', 'td:nth-child(6)')" style="cursor:pointer"> Reporting Manager Email</th>

                    <th scope="col"> Action</th>

                </tr>
            </thead>

        </table>

    </div>
    <input type="button" value="ADD" class="btn btn-default" id="addButton" />


    <div id="mailConfig">
        <hr />


        <h3>Send Email Remainder every :</h3>


        <div class="form-group row">


            <div class="col-sm-3" id="inputTextbox" data-toggle="dropdown">
                <select id="emailTimer" class="form-control" data-toggle="tooltip" data-placement="right" title="Effects both activation and deactivation remainder emails">
                    <option value="1">1 day</option>
                    <option value="2">2 days</option>
                    <option value="4">4 days</option>
                    <option value="7">1 week</option>
                    <option value="15">15 days</option>
                </select>
            </div>
        </div>

        <hr />


        <h3>AU domain WBT email configuration:</h3>

        <div class="form-group row">
            <div class="col-sm-3">
                <label for="exampleFormControlTextarea1">To email to assign AU domain WBT :</label>
                <input type="text" class="form-control" onkeyup="ValidateEmail('#toEmailAUDomain')" id="toEmailAUDomain" />


            </div>
            <div class="col-sm-3">
                <label for="exampleFormControlTextarea1">Contact name to assign AU domain WBT :</label>
                <input type="text" class="form-control" onkeyup="ValidateInputText('#contactNameAUDomain')" id="contactNameAUDomain" />
            </div>
            <div class="col-sm-3">
                <label for="exampleFormControlTextarea1">CC email to assign AU domain WBT :</label>
                <input type="text" class="form-control" onkeyup="ValidateEmail('#ccEmailAUDomain')" id="ccEmailAUDomain" data-toggle="tooltip" data-placement="top" title="use ',' while adding two or more email-ids"/>
            </div>
        </div>
        <hr />

        <h3>Welcome Email Configuration</h3>

        <div class="form-group row">
            <div class="col-sm-3">
                <label for="exampleFormControlTextarea1">Welcome Email sender:</label>
                <input type="text" class="form-control" onkeyup="ValidateEmail('#welcomeEmailSender')" id="welcomeEmailSender" />
            </div>
        </div>

            <hr />

            <div>
                <h3>Api Token Configuration</h3>
            </div>

            <div class="form-group">
                <label for="exampleFormControlTextarea1">Token Name:</label>
                <input type="text" class="form-control" id="TokenName" rows="1" placeholder="SendGrid" readonly/>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Token Value:</label>
                <textarea class="form-control" id="TokenValue" rows="1"></textarea>
            </div>


            <button type="button" id="MailContentButton" class="btn btn-primary">Submit</button>

        </div>
        <div id="pop1">
            <div class="form-popup" id="myForm">
                <form class="form-container">
                    <h3>Add Sponsor Details</h3>
                    <div class="required">
                        <label for="text"><b>Team Name</b></label>
                    </div>
                    <input type="text" placeholder="Team Name" id="teamName" name="team" required>

                    <div class="required">
                        <label for="firstname"><b>Sponsor First Name</b></label>
                    </div>
                    <input type="text" placeholder="First Name" id="sponsorFirstName" name="firstname" onkeyup="ValidateInputText('#sponsorFirstName')" required>
                    <div class="required">
                        <label for="lastname"><b>Sponsor Last Name </b></label>
                    </div>
                    <input type="text" placeholder="Last Name" id="sponsorLastName" name="lastname" onkeyup="ValidateInputText('#sponsorLastName')" required>

                    <label for="gid"><b>Sponsor GID</b></label>
                    <input type="text" placeholder="GID" id="sponsorGid" name="gid">

