                    <input type="email" placeholder="Email Id" name="email" onkeyup="ValidateEmail('#editSponsorEmail')" id="editSponsorEmail" required>

                    <label for="department"><b>Sponsor Department</b></label>
                    <input type="text" placeholder="Department" name="department" id="editDepartment" required>

                    <label for="email"><b>Reporting Manager Email Id</b></label>
                    <input type="email" placeholder="Email Id" onkeyup="ValidateEmail('#editRmEmail')" id="editRmEmail" required>

                    <label for="email"><b>CM Email Id</b></label>
                    <input type="email" id="editFromEmail" name="Fromemail" onkeyup="ValidateEmail('#editFromEmail')" required>

                    <label for="email"><b>Sivantos Activation Request Point of Contact Id</b></label>
                    <input type="email" id="editToEmail" name="Toemail" onkeyup="ValidateEmail('#editToEmail')" required>

