                        <label for="email"><b>Sivantos Activation Request Point of Contact Email ID</b></label>
                    </div>
                    <input type="email" placeholder="Email Id" id="toEmail" name="Toemail" onkeyup="ValidateEmail('#toEmail')" required>

                    <div class="required">
                        <label for="lastname"><b>Sivantos Activation Request Point of Contact Name</b></label>
                    </div>
                    <input type="text" placeholder="Sivantos Contact Name" id="sivantosActivationPointName" name="SivantosActivationPointName" onkeyup="ValidateInputText('#sivantosActivationPointName')" required>

